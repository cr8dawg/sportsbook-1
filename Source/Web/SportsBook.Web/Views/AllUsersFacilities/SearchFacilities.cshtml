@model SportsBook.Web.ViewModels.PageableFacilityList.FacilitiesListViewModel




@{Html.RenderPartial("_FacilityPartial", Model.Facilities);}


<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/AllUsersFacilities/SearchFacilities/@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }

            <li class="@className"><a href="/AllUsersFacilities/SearchFacilities/@i">@i</a></li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/AllUsersFacilities/SearchFacilities/@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>