@model SportsBook.Data.Models.Facility

@if (ViewBag.isFavorite == "true")
{
    @Html.ActionLink("RemoveFromFavorites", "RemoveFromFavorites", "FavoriteFacilities", new { id = Model.Id }, new { @class = "remove-from-favorites-button" })
}
else
{
    @Html.ActionLink("Favorites", "AddToFavorites", "FavoriteFacilities", new { id = Model.Id }, new { @class = "favorites-button" })
}