@model SportsBook.Web.ViewModels.Comments.RequestWriteComment

@using (@Html.BeginForm("WriteComment", "Comments", FormMethod.Post))
{

    @Html.TextAreaFor(model => model.Content, 10, 40, null);
    <br />
    <input type="text" name="title" />
    <br />
    <input type="text" name="content" />
    <input type="submit" class="btn btn-success" />
    <div>
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </div>
}
