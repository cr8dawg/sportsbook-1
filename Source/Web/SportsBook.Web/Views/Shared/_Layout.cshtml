@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SPORTSBOOK</title>
    @Styles.Render("~/Content/css", "~/Content/kendo")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/kendo")

    <link href="~/Content/Theme/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Theme/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <link href="~/Content/Theme/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/Theme/price-range.css" rel="stylesheet" />
    <link href="~/Content/Theme/animate.css" rel="stylesheet" />
    <link href="~/Content/Theme/main.css" rel="stylesheet" />
    <link href="~/Content/Theme/responsive.css" rel="stylesheet" />


    <link href="~/Content/custom-styles.css" rel="stylesheet" />
    <link href="~/Content/star-rating-styles.css" rel="stylesheet">
    <link href="~/Content/animation.css" rel="stylesheet">
    <link href="~/Content/box.css" rel="stylesheet" />
    <link href="~/Content/comments-styles.css" rel="stylesheet" />

    <link href="~/Content/alertify.core.css" rel="stylesheet" />
    <link href="~/Content/alertify.default.css" rel="stylesheet" />
    <link href="~/Content/user-form.css" rel="stylesheet" />
    <script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
    <script src="~/Scripts/dialog-controller.js"></script>
</head>
<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-envelope"></i> emil_tishinov@mail.bg</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <span>SPORTSBOOK</span>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul id="login-partial" class="nav navbar-nav">
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li>@Html.ActionLink("SportsBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li class="dropdown">
                                    <a href="#">Спортни Обекти<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li>@Html.ActionLink("Добави Обект", "AddFacility", "FacilitiesPrivate", new { area = "facilities" }, null)</li>
                                        <li>@Html.ActionLink("Всички", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 0 }, null)</li>
                                        <li>@Html.ActionLink("Футбол", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 1 }, null)</li>
                                        <li>@Html.ActionLink("Волейбол", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 2 }, null)</li>
                                        <li>@Html.ActionLink("Баскетбол", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 3 }, null)</li>
                                        <li>@Html.ActionLink("Фитнес", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 4 }, null)</li>
                                        <li>@Html.ActionLink("Плуване", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 5 }, null)</li>
                                        <li>@Html.ActionLink("Тенис", "SearchFacilities", "FacilitiesPublic", new { area = "Facilities", id = 6 }, null)</li>
                                    </ul>
                                </li>
                                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                                {
                                    <li class="dropdown">
                                        <a href="#">Администрация<i class="fa fa-angle-down"></i></a>
                                        <ul role="menu" class="sub-menu">
                                            <li>@Html.ActionLink("Потребители", "Index", "AdminAppUsers", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Спортове", "Index", "AdminSportCategories", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Спортни събития", "Index", "AdminEvents", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Спортни обекти", "Index", "AdminFacilities", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Коментари към спортни обекти", "Index", "AdminFacilityComments", new { area = "Administration" }, null)</li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">


                        @using (Html.BeginForm("SearchUsers", "Users", new { area = string.Empty }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" class="search_box" width:150px;" name="search" placeholder="Търси потребители">

                        }
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->




    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="dialog-login-form">@Html.Action("GetPopupLogin", "Account")</div>
        <div id="dialog-register-form">@Html.Action("GetPopupRegister", "Account")</div>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @*<script src="~/Content/Theme/jquery_002.js"></script>*@
    <script src="~/Content/Theme/bootstrap.js"></script>
    @*<script src="~/Content/Theme/jquery.js"></script>
        <script src="~/Content/Theme/price-range.js"></script>
        <script src="~/Content/Theme/jquery_003.js"></script>*@
    <script src="~/Content/Theme/main.js"></script>
    <script src="~/Scripts/simple-star-rating.js"></script>
    <script src="~/Scripts/alertify.min.js"></script>
    @*<script src="~/Scripts/animation-controller.js"></script>*@
    @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@
    @RenderSection("ToggleComments", required: false)
    @RenderSection("AddComment", required: false)
    @RenderSection("accountContent", required: false)
    @RenderSection("GoogleMapsSettings", required: false)
    @RenderSection("Scripts", required: false)
    @RenderSection("Login", required: false)
    <script src="~/Scripts/favorites-controller.js"></script>
    <script src="~/Scripts/page-comments-controller.js"></script>
</body>
</html>
