@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css", "~/Content/kendo")
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/kendo")  
    <link href="~/Content/Theme/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Theme/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <link href="~/Content/Theme/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/Theme/price-range.css" rel="stylesheet" />
    <link href="~/Content/Theme/animate.css" rel="stylesheet" />
    <link href="~/Content/Theme/main.css" rel="stylesheet" />
    <link href="~/Content/Theme/responsive.css" rel="stylesheet" />


    <link href="~/Content/custom-styles.css" rel="stylesheet" />
    <link href="~/Content/box.css" rel="stylesheet" />

</head>
<body>

    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="http://themifycloud.com/demos/templates/eshop/index.html"><span>E</span>-Shop</a>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    USA
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Canada</a></li>
                                    <li><a href="#">UK</a></li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    DOLLAR
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Canadian Dollar</a></li>
                                    <li><a href="#">Pound</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li>@Html.ActionLink("SportsBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>                            
                                <li class="dropdown">
                                    <a href="#">Спортни обекти<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li>@Html.ActionLink("Всички", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 0 }, null)</li>
                                        <li>@Html.ActionLink("Футбол", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 1 }, null)</li>
                                        <li>@Html.ActionLink("Волейбол", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 2 }, null)</li>
                                        <li>@Html.ActionLink("Баскетбол", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 3 }, null)</li>
                                        <li>@Html.ActionLink("Фитнес", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 4 }, null)</li>
                                        <li>@Html.ActionLink("Плуване", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 5 }, null)</li>
                                        <li>@Html.ActionLink("Тенис", "SearchFacilities", "AllUsersFacilities", new { area = string.Empty, id = 6 }, null)</li>
                                     </ul>
                                </li>
                                
                                <li>@Html.ActionLink("Добави обект", "AddFacility", "Facilities", new { area = "RegisteredUsers" }, null)</li>

                             
                          
                                <li class="dropdown">
                                    <a href="#">Администрация<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li>@Html.ActionLink("Потребители", "Index", "AdminAppUsers", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Спортове", "Index", "AdminSportCategories", new { area = "Administration" }, null)</li>
                                        <li>@Html.ActionLink("Спортни обекти", "Index", "AdminFacilities", new { area = "Administration" }, null)</li>
                                        
                                    </ul>
                                </li>
                                
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="search_box pull-right">
                            <input placeholder="Search" type="text">
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @*<script src="~/Content/Theme/jquery_002.js"></script>*@
    <script src="~/Content/Theme/bootstrap.js"></script>
    @*<script src="~/Content/Theme/jquery.js"></script>
    <script src="~/Content/Theme/price-range.js"></script>
    <script src="~/Content/Theme/jquery_003.js"></script>*@
    <script src="~/Content/Theme/main.js"></script>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
    @RenderSection("addComment", required: false)
    @RenderSection("changeFavorites", required: false) 
    @RenderSection("Scripts", required: false)
    
    <script>
        function standBy(id) {
            $('#image-container-' + id).attr('src', 'http://naxcore.com/wp-content/themes/Artificial-Reason-WP/img/no_image.png')
        }
    </script> 
   
</body>
</html>
