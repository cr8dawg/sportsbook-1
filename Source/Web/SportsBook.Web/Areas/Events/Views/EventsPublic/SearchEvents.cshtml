@model SportsBook.Web.Areas.Events.ViewModels.PageableEventList.EventsListViewModel


@using (Html.BeginForm("Searchevents", "EventsPublic",new { area = "Events" }, FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{    
    <div class="input-group">        
         <div class="input-group-btn">
            @Html.TextBoxFor(m => m.Search, Model.Search, new { @class = "form-control btn btn-default", placeholder = "Търси", style="width: 150px; margin-right:10px"})
           
        </div>
        <input class="btn btn-primary" value="Търси" type="submit">   
    </div>
    @Html.ValidationMessageFor(model => model.Search, "", new { @class = "text-danger" })
}


@{Html.RenderPartial("_EventPartial", Model.Events);

    string url = Request.RawUrl.ToString();
    var parts = url.Split('/').ToList();
    var lastPart = parts[parts.Count - 1].Split('?').ToList();
    var id = lastPart[0]; }


<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/Events/EventsPublic/SearchEvents/@id?currentPage=@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }

            <li class="@className"><a href="/Events/EventsPublic/SearchEvents/@id?currentPage=@i">@i</a></li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/Events/EventsPublic/SearchEvents/@id?currentPage=@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
